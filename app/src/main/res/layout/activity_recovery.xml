<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_green">

    <TextView
        android:id="@+id/recovery_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verify_device"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="@dimen/padding_m"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/recovery_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:padding="@dimen/padding_m"
        app:layout_constraintTop_toBottomOf="@id/recovery_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify_device"
        style="@style/DarkGreenPillBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_device"
        app:layout_constraintTop_toBottomOf="@id/recovery_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_m"/>

</androidx.constraintlayout.widget.ConstraintLayout>