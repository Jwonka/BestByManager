<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_green"
    android:fitsSystemWindows="true"
    tools:context=".UI.activities.ProductDetails">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_info_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_m"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/sky_blue"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/product_details_button"
        app:layout_constraintWidth_max="488dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_sm">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_input_layout"
                style="@style/CompactOutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:textColor="@color/light_gray"
                    android:hint="@string/product_name"
                    android:textSize="20sp"
                    android:gravity="center"
                    style="@style/CompactEditText"
                    tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_expiration"
                style="@style/LightGreenPill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/row_height"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:text="@string/expiration_date"
                android:layout_marginTop="@dimen/spacing_s"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_input_layout"
                app:layout_constraintWidth_percent="1"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/quantity_input_layout"
                style="@style/CompactOutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_s"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintTop_toBottomOf="@id/edit_expiration">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/row_height"
                    android:hint="@string/quantity"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    style="@style/CompactEditText"
                    tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/weight_input_layout"
                style="@style/CompactOutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_s"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintTop_toBottomOf="@id/quantity_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_weight"
                    style="@style/CompactEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/weight"
                    android:minHeight="@dimen/row_height"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/brand_input_layout"
                style="@style/CompactOutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_s"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintTop_toBottomOf="@id/weight_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_brand"
                    style="@style/CompactEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/brand"
                    android:minHeight="@dimen/row_height"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/barcode_input_layout"
                style="@style/CompactOutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_s"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintTop_toBottomOf="@id/brand_input_layout"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_barcode_scanner"
                app:endIconContentDescription="@string/scan_barcode">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/row_height"
                    android:hint="@string/barcode"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    style="@style/CompactEditText"
                    android:enabled="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/spacing_m"
                android:spinnerMode="dropdown"
                android:entries="@array/product_categories"
                android:background="@drawable/white_outlined_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barcode_input_layout"
                app:layout_constraintWidth_percent="1"/>

            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:minHeight="120dp"
                android:maxHeight="180dp"
                android:layout_marginTop="@dimen/spacing_s"
                android:scaleType="centerCrop"
                android:background="@drawable/image_placeholder_border"
                android:src="@drawable/ic_add_photo"
                android:contentDescription="@string/product_photo"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_category"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintDimensionRatio="16:9"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/product_details_button"
        style="@style/DarkGreenPillBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_list"
        android:layout_marginTop="@dimen/spacing_s"
        android:layout_marginBottom="@dimen/spacing_xl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>