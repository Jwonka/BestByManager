<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/mint_green"
    tools:context=".UI.activities.ProductDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xs">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/product_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/sky_blue"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cardCornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_xxs">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/brand_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_preview"
                    app:layout_constraintWidth_percent="0.45">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_brand"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/brand"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="@dimen/row_height"
                        tools:ignore="TextContrastCheck,TouchTargetSizeCheck"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/brand_input_layout"
                    app:layout_constraintStart_toStartOf="@id/brand_input_layout"
                    app:layout_constraintEnd_toEndOf="@id/brand_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_product_name"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/product_name"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="@dimen/row_height"
                        tools:ignore="TextContrastCheck"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/weight_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/name_input_layout"
                    app:layout_constraintStart_toStartOf="@id/name_input_layout"
                    app:layout_constraintEnd_toEndOf="@id/name_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_weight"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/weight"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="@dimen/row_height"
                        tools:ignore="TextContrastCheck"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/quantity_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/weight_input_layout"
                    app:layout_constraintStart_toStartOf="@id/weight_input_layout"
                    app:layout_constraintEnd_toEndOf="@id/weight_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_quantity"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/quantity"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="@dimen/row_height"
                        tools:ignore="TextContrastCheck"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_expiration_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/quantity_input_layout"
                    app:layout_constraintStart_toStartOf="@id/quantity_input_layout"
                    app:layout_constraintEnd_toEndOf="@id/quantity_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_expiration"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/expiration_date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="@dimen/row_height"
                        tools:ignore="TextContrastCheck"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/barcode_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_barcode_scanner"
                    app:endIconContentDescription="@string/scan_barcode"
                    app:endIconTint="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/edit_expiration_layout"
                    app:layout_constraintStart_toStartOf="@id/edit_expiration_layout"
                    app:layout_constraintEnd_toEndOf="@id/edit_expiration_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_barcode"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/barcode"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minHeight="@dimen/row_height"
                        tools:ignore="TextContrastCheck"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/spinner_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_xs"
                    app:layout_constraintTop_toBottomOf="@id/barcode_input_layout"
                    app:layout_constraintStart_toStartOf="@id/barcode_input_layout"
                    app:layout_constraintEnd_toEndOf="@id/barcode_input_layout">

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/row_height"
                        android:layout_weight="0.7"
                        android:layout_marginEnd="@dimen/spacing_xs"
                        android:layout_marginBottom="@dimen/spacing_xs"
                        android:background="@drawable/white_outlined_box"
                        android:popupBackground="@color/white"
                        android:dropDownSelector="@drawable/white_outlined_box"
                        android:entries="@array/product_categories"/>

                    <Spinner
                        android:id="@+id/spinner_isle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/row_height"
                        android:layout_weight="0.25"
                        android:background="@drawable/white_outlined_box"
                        android:popupBackground="@color/white"
                        android:dropDownSelector="@drawable/white_outlined_box"
                        android:entries="@array/isles"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_preview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"
                    android:background="@drawable/image_placeholder_border"
                    android:contentDescription="@string/product_photo"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/brand_input_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintDimensionRatio="16:9"/>

                <TextView
                    android:id="@+id/image_attribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/open_food_facts_image_credit"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:autoLink="web"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/image_preview"
                    app:layout_constraintStart_toStartOf="@id/image_preview"
                    app:layout_constraintEnd_toEndOf="@id/image_preview"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom_actions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:layout_marginEnd="@dimen/spacing_xs"
                    app:layout_constraintTop_toBottomOf="@id/image_attribution"
                    app:layout_constraintStart_toStartOf="@id/image_preview"
                    app:layout_constraintEnd_toEndOf="@id/image_preview">

                    <LinearLayout
                        android:id="@+id/toggle_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/spacing_xxl"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/add_expiring_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/toggle_mode_hint"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginEnd="@dimen/padding_xs"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:showText="true"
                            android:layout_marginEnd="@dimen/padding_s"
                            android:textOff="@string/save_product"
                            android:textOn="@string/add_new_expiration"
                            tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck"/>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/save_product_button"
                            style="@style/DarkGreenPill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/padding_s"
                            android:layout_marginEnd="@dimen/spacing_s"
                            android:text="@string/save_product"
                            app:layout_constraintTop_toBottomOf="@id/toggle_group"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/clear_product_button"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/clear_product_button"
                            style="@style/DarkGreenPill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:paddingHorizontal="@dimen/padding_s"
                            android:text="@string/clear"
                            app:layout_constraintTop_toTopOf="@id/save_product_button"
                            app:layout_constraintStart_toEndOf="@id/save_product_button"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>