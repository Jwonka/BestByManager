<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_green"
    android:fitsSystemWindows="true"
    tools:context=".UI.activities.AboutActivity">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/gray"
        android:padding="@dimen/padding_l"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/about_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_s"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/sky_blue"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/about_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_m">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/about_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_best_by_manager"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/about_paragraph_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/paragraph_1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/about_paragraph_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/paragraph_2"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/about_paragraph_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/paragraph_3"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/licensing_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/license_title"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/license_bullets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/license_bullets"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:paddingStart="@dimen/spacing_m"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/license_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/license_footer"
                    android:autoLink="web"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/dev_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_title"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/dev_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_info"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/dev_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_email"
                    android:autoLink="email"
                    android:linksClickable="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/dev_linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_linkedin"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disclaimer"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6dp"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:layout_marginBottom="@dimen/spacing_l" />

                <TextView
                    android:id="@+id/copyright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/copyright"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>