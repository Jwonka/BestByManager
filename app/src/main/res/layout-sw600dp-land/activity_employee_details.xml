<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_green"
    android:padding="@dimen/spacing_s"
    tools:context=".UI.activities.EmployeeDetails">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/employee_info_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_xs"
        app:cardBackgroundColor="@color/sky_blue"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_s">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/employee_input_layout"
                style="@style/CompactOutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_s"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_username"
                    style="@style/CompactEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/owner_name"
                    android:imeOptions="actionDone"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:minHeight="@dimen/row_height"
                    tools:ignore="TextContrastCheck,VisualLintTextFieldSize"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_actions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_m"
                app:layout_constraintTop_toBottomOf="@id/employee_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/actions_flow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="save_user_button,generate_temp_pwd,clear_employee_button"
                    app:flow_wrapMode="aligned"
                    app:flow_horizontalStyle="packed"
                    app:flow_horizontalGap="@dimen/spacing_m"
                    app:flow_verticalGap="@dimen/spacing_m"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_user_button"
                    style="@style/DarkGreenPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:text="@string/save_employee"
                    android:paddingHorizontal="@dimen/padding_s"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/generate_temp_pwd"
                    style="@style/DarkGreenPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:text="@string/reset_password"
                    android:paddingHorizontal="@dimen/padding_s"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clear_employee_button"
                    style="@style/DarkGreenPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:text="@string/clear"
                    android:paddingHorizontal="@dimen/padding_s"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>