<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_green"
    android:clipToPadding="true"
    android:fillViewport="true"
    tools:context=".UI.activities.ProductDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_s">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/product_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_s"
            android:layout_marginTop="@dimen/spacing_xl"
            app:cardBackgroundColor="@color/sky_blue"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cardCornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/spacing_sm">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/brand_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_username"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="@string/brand"
                        android:minHeight="@dimen/row_height"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        tools:ignore="TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/brand_input_layout"
                    app:layout_constraintWidth_percent="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:hint="@string/product_name"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/CompactEditText"
                        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/weight_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintTop_toBottomOf="@id/name_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_weight"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="@string/weight"
                        android:minHeight="@dimen/row_height"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        tools:ignore="TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/quantity_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintTop_toBottomOf="@id/weight_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/row_height"
                        android:hint="@string/quantity"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/CompactEditText"
                        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_expiration_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/row_height"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:layout_marginBottom="@dimen/spacing_l"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/quantity_input_layout"
                    app:layout_constraintWidth_percent="1"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_expiration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/row_height"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:hint="@string/expiration_date"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/CompactEditText"
                        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/barcode_input_layout"
                    style="@style/CompactOutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintTop_toBottomOf="@id/edit_expiration_layout"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_barcode_scanner"
                    app:endIconTint="@color/black"
                    app:endIconContentDescription="@string/scan_barcode">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_barcode"
                        style="@style/CompactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:gravity="center"
                        android:hint="@string/barcode"
                        android:inputType="number"
                        android:maxLines="1"
                        android:minHeight="@dimen/row_height"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/row_height"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:minHeight="48dp"
                    android:padding="@dimen/padding_s"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/white"
                    android:dropDownSelector="@drawable/white_outlined_box"
                    android:entries="@array/product_categories"
                    android:background="@drawable/white_outlined_box"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/spinner_isle"
                    app:layout_constraintTop_toBottomOf="@id/barcode_input_layout"
                    app:layout_constraintWidth_percent="0.7"/>

                <Spinner
                    android:id="@+id/spinner_isle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/row_height"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/white"
                    android:dropDownSelector="@drawable/white_outlined_box"
                    android:entries="@array/isles"
                    android:background="@drawable/white_outlined_box"
                    android:minHeight="48dp"
                    android:padding="@dimen/padding_s"
                    app:layout_constraintStart_toEndOf="@id/spinner_category"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barcode_input_layout"
                    app:layout_constraintWidth_percent="0.3"/>

                <ImageView
                    android:id="@+id/image_preview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/row_height"
                    android:scaleType="centerCrop"
                    android:background="@drawable/image_placeholder_border"
                    android:src="@drawable/ic_add_photo"
                    android:contentDescription="@string/product_photo"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/spinner_category"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintDimensionRatio="16:9"
                    android:clipToOutline="true"
                    tools:targetApi="31"
                    tools:ignore="VisualLintBounds" />

                <LinearLayout
                    android:id="@+id/bottom_actions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/row_height"
                    android:paddingBottom="@dimen/spacing_xl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_preview">

                    <TextView
                        android:id="@+id/administrator_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toggle_mode_hint"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/spacing_s"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:minHeight="48dp"
                        android:padding="4dp"
                        android:showText="true"
                        android:textOff="@string/save_product"
                        android:textOn="@string/add_new_expiration"
                        android:contentDescription="@string/switch_mode_desc"
                        android:layout_marginEnd="@dimen/spacing_m"
                        tools:ignore="TouchTargetSizeCheck" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_product_button"
                        style="@style/DarkGreenPill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save_product"
                        android:layout_marginStart="@dimen/spacing_xl"
                        android:paddingHorizontal="@dimen/padding_s"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clear_product_button"
                        style="@style/DarkGreenPill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clear_product"
                        android:layout_marginStart="@dimen/spacing_xxl"
                        android:paddingHorizontal="@dimen/padding_s"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>